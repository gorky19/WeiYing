<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg_colorful"
    android:id="@+id/select_layout"
    >
    <include layout="@layout/select_inclue"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/toolbar_zt"
        android:background="@color/reds"
        >
        <EditText
        android:layout_width="305dp"
        android:layout_height="37dp"
        android:hint="请输入您喜欢的电影"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="33dp"
        android:textColor="#fff"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"
        android:textColorHint="#4DFFFFFF"
        android:drawableLeft="@drawable/search"
        android:background="@drawable/select_edit"
        android:id="@+id/home_search_edit"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_text"
            android:text="搜索"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/xiao_img"
            android:layout_marginTop="39dp"
            android:layout_toLeftOf="@id/search_text"
            android:layout_marginRight="25dp"
            android:id="@+id/xiao_img"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/zong_lay"
        android:layout_below="@id/toolbar_zt"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索记录"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/delete_lishi"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:background="@drawable/search_clear"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flow_lay"
        android:layout_below="@id/zong_lay"
        >
        <zhangtao.bwie.com.demo.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:id="@+id/flow"
            app:itemColor="#fff"
            app:itemSize="14sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flow_lay"
        android:layout_marginTop="8dp"
        android:id="@+id/my_lay"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门推荐"
            android:textColor="#fff"
            android:id="@+id/tui_text"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            />
        <zhangtao.bwie.com.demo.MyRecy
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_recy"
            android:layout_below="@+id/tui_text"
            ></zhangtao.bwie.com.demo.MyRecy>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tuijian_layout"
        android:layout_marginTop="80dp"
        >
        <com.jwenfeng.library.pulltorefresh.PullToRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_pull"
            >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tui_recy"
            ></android.support.v7.widget.RecyclerView>
        </com.jwenfeng.library.pulltorefresh.PullToRefreshLayout>
    </RelativeLayout>
</RelativeLayout>