<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daoyan"
        android:text="导演:"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:text="演员:"
        android:id="@+id/acter"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_below="@id/daoyan"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zhankai"
        android:text="展开"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_below="@id/acter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:visibility="gone"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:id="@+id/xiangqing"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_below="@+id/zhankai"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/more_data"
        android:layout_below="@+id/xiangqing"
        android:layout_marginTop="15dp"
        ></android.support.v7.widget.RecyclerView>
</RelativeLayout>