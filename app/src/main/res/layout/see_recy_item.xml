<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:gs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="320dp"
        android:layout_height="420dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="320dp"
            android:layout_height="420dp"
            android:layout_centerInParent="true"
            android:background="@drawable/recy_item_back"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mov_tit"
            android:text="电影标题"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="140dp"
            android:layout_height="180dp"
            fresco:placeholderImage="@drawable/default_200"
            fresco:roundedCornerRadius="7dp"
            android:layout_below="@id/mov_tit"
            android:id="@+id/mov_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="255dp"
            android:layout_height="125dp"
            android:id="@+id/mov_desc"
            android:text="介绍"
            android:textColor="#ddd"
            android:textSize="15sp"
            android:ellipsize="end"
            android:layout_below="@id/mov_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
    </RelativeLayout>
</RelativeLayout>